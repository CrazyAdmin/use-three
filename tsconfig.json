{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es2015", "dom"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["../node_modules/@types", "../@types"],
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
